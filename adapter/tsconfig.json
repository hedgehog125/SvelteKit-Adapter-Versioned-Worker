{
	"include": [
		"./index.ts",
		"./src"
	],
	"exclude": [
		"./static"
	],
	"compilerOptions": {
		"target": "es2021",
		"module": "ESNext",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"outDir": "build",
		"declarationMap": true
	}
}